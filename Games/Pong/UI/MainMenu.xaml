<UserControl x:Class="TRW.Games.Pong.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TRW.Games.Pong"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <Grid x:Name="uxMenuGrid" Background="#88FFFFFF">
        <Border BorderThickness="1" BorderBrush="Black"/>
        <ItemsControl x:Name="uxGridSource"  ItemsSource="{Binding Source=test, Mode=OneWay}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding}" HorizontalAlignment="Center" Padding="30,0,30,0" Margin="0,20,0,0" VerticalAlignment="Top" Background="#DDDDDDFF" FontFamily="Georgia" FontSize="20" Click="Button_Click">
                        <Button.Effect>
                            <DropShadowEffect/>
                        </Button.Effect>
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
    </Grid>
</UserControl>
